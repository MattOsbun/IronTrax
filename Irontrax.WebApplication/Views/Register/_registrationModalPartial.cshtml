@model RegisterModel

<div class="modal fade" id="new-registration" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Sign up</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body mx-3" id="registerFormModalBody">
                <form asp-controller="Register"
                      asp-action="RegisterAjax"
                      method="post"
                      class="form-horizontal">
                    <div asp-validation-summary="All"></div>
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control validate" style="width:50%;">
                        <i class="fas fa-user grey-text"></i>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control validate" style="width:50%;">
                        <i class="fas fa-user grey-text"></i>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" asp-for="EmailAddress"></label>
                        <input asp-for="EmailAddress" class="form-control validate" style="width:50%;">
                        <i class="fas fa-envelope grey-text"></i>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control validate" style="width:50%;">
                        <i class="fas fa-lock grey-text"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control validate" style="width:50%;">
                        <i class="fas fa-lock grey-text"></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="" modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-primary" data-save="modal">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>