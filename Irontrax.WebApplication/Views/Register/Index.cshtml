@model RegisterModel

<form asp-controller="Register"
      asp-action="Index"
      method="post"
      class="form-horizontal">
    <div asp-validation-summary="All"></div>
    <div class="md-form mb-5">
        <i class="fas fa-user prefix grey-text"></i>
        <input asp-for="UserName" class="form-control validate">
        <label data-error="wrong" data-success="right" asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="md-form mb-4">
        <i class="fas fa-lock prefix grey-text"></i>
        <input asp-for="Password" class="form-control validate">
        <label data-error="wrong" data-success="right" asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="md-form mb-5">
        <i class="fas fa-lock prefix grey-text"></i>
        <input asp-for="ConfirmPassword" class="form-control validate">
        <label data-error="wrong" data-success="right" asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="md-form mb-5">
        <button type="submit" class="btn btn-primary" data-save="modal">Register</button>
    </div>
</form>