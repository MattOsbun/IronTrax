@model RegisterModel

<form id="loginForm"
      method="post"
      asp-controller="Authenticate"
      asp-action="Login"
      class="form-horizontal">
    <div asp-validation-summary="All"></div>
    <div class="md-form mb-5">
        <i class="fas fa-envelope prefix grey-text"></i>
        <input asp-for="UserName" class="form-control validate" />
        <label data-error="wrong" data-success="right" asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="md-form mb-4">
        <i class="fas fa-lock prefix grey-text"></i>
        <input asp-for="Password" class="form-control validate">
        <label asp-for="Password" data-error="wrong" data-success="right"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Log In</button>
    </div>
</form>