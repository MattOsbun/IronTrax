<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div id="modal-placeholder"></div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Irontrax</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Activity" asp-action="Index">Activity Stream</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a href=""
                                   class="nav-link text-dark"
                                   data-toggle="ajax-modal"
                                   data-target="#new-registration"
                                   data-url="@Url.Action("Modal","Register")">Register</a>
                            </li>
                            <li class="nav-item">
                                <a href=""
                                   class="nav-link text-dark"
                                   data-toggle="ajax-modal"
                                   data-target="#user-login"
                                   data-url="@Url.Action("LoginAjax","Authenticate")">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href=""
                                   class="nav-link text-dark"
                                   data-toggle="ajax-modal"
                                   data-target="#user-activity"
                                   data-url="@Url.Action("LogAjax","Activity")">Add Activity</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Authenticate" asp-action="Logout">Log Out</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="https://kit.fontawesome.com/2333c08e07.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
