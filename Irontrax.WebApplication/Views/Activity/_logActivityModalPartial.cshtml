@model NewActivity

<div class="modal fade" id="new-registration" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">What did you do today?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body mx-3" id="registerFormModalBody">
                <form asp-controller="Activity"
                      asp-action="LogAjax"
                      method="post"
                      class="form-horizontal"
                      data-redirect="/Activity/Index">
                    <div asp-validation-summary="All"></div>
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" asp-for="Activity"></label>
                        <textarea asp-for="Activity" class="form-control validate" />
                        <span asp-validation-for="Activity" class="text-danger"></span>
                    </div>

                    <div class="" modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-primary" data-save="modal">Log This!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>